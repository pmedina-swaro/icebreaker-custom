{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "${messageContent}",
          "wrap": true,
          "horizontalAlignment": "${textAlignment}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "${tourButtonText}",
      "url": "${tourUrl}"
    }
  ]
}